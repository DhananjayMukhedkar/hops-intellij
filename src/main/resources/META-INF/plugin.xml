<idea-plugin>
    <id>com.logicalclocks.hops-intellij</id>
    <name>Hopsworks Plugin</name>
    <vendor email="jim@logicalclocks.com" url="http://www.logicalclocks.com">Logical Clocks AB</vendor>

    <description><![CDATA[
    Hopsworks plugin to deploy and run programs on a cluster.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
            <projectConfigurable groupId="tools"
                             displayName="Hopsworks Settings"
                             instance="com.logicalclocks.HopsworksConfigurable" />



     </extensions>

    <actions>
            <action id="com.logicalclocks.actions.FileCopyDialogAction"
                    class="com.logicalclocks.actions.FileCopyDialogAction"
                    text="Copy to Hopsworks" description="Hopsworks Copy Action">
                <override-text place="MainMenu" text="Hopsworks File Copy"/>
                <keyboard-shortcut first-keystroke="control alt A" second-keystroke="C" keymap="$default"/>
                <mouse-shortcut keystroke="control button3 doubleClick" keymap="$default"/>
                <add-to-group group-id="ToolsMenu" anchor="first"/>
            </action>

    <!--    <action id="hopsRun" class="com.logicalclocks.actions.HopsRunJob" text="Run on Hopsworks">
            <add-to-group group-id="EditorPopupMenu.Run" anchor="last"/>
        </action>-->

        <action id="createJob" class="com.logicalclocks.actions.HopsCreateJob" text="Create Job on Hopsworks">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="first" />
        </action>
        <action id="jobRun" class="com.logicalclocks.actions.HopsRunJob" text="Run Job on Hopsworks">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="after" relative-to-action="createJob"/>
        </action>
        <action id="jobStop" class="com.logicalclocks.actions.HopsStopJob" text="Stop Job on Hopsworks">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="after" relative-to-action="jobRun"/>
        </action>
        <action id="jobRemove" class="com.logicalclocks.actions.HopsRemoveJob" text="Remove Job from Hopsworks"
                description="Deletes job from Hopsworks ">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="after" relative-to-action="jobStop"/>
        </action>

        <action id="jobLogs" class="com.logicalclocks.actions.HopsJobLogs" text="Job Execution Logs">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="after" relative-to-action="jobRemove"/>
        </action>
        <action id="jobStatus" class="com.logicalclocks.actions.HopsJobStatus" text="Job Execution Status">
            <add-to-group group-id="ProjectViewPopupMenuRunGroup" anchor="after" relative-to-action="jobLogs"/>
        </action>
    </actions>

</idea-plugin>